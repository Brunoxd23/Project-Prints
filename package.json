{
  "name": "project-prints",
  "version": "2.0.0",
  "description": "Automação para capturar prints (Puppeteer) com UI simplificada e instalador Windows.",
  "main": "electron/main.js",
  "scripts": {
    "server": "node server.js",
    "electron:dev": "electron .",
    "electron:build": "electron-builder --win"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "puppeteer": "^24.20.0"
  },
  "devDependencies": {
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.pixeldreamdev.projectprints",
    "productName": "Project Prints",
    "files": [
      "**/*",
      "!**/.history/**",
      "!**/.git/**"
    ],
    "asarUnpack": [
      "node_modules/puppeteer/.local-chromium/**"
    ],
    "win": {
      "icon": "electron/build/Einstein.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "installerIcon": "electron/build/einstein.ico",
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false
    }
  }
}
